{
	"compilerOptions": {
		"target": "es2020",
		"module": "ESNext",
    "baseUrl": ".",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"moduleResolution": "Node",
    "allowJs": true,
    "paths": {
      "~/*": ["src/*"],
    },
	},
  "exclude": ["dist", "node_modules"]
}
